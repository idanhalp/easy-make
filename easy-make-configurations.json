[
  {
    "name": "default",
    "compiler": "g++",
    "standard": "23",
    "warnings": ["-Wall", "-Wextra"],
    "includeDirectories": ["."],
    "sources": {
      "directories": ["."]
    },
    "exclude": {
      "directories": [
        "tests/unit_tests/resources",
        "tests/regression_tests/resources"
      ]
    }
  },
  {
    "name": "test",
    "parent": "default",
    "optimization": "0",
    "defines": ["DEBUG"],
    "exclude": {
      "files": ["source/main.cpp"]
    },
    "output": {
      "name": "test"
    }
  },
  {
    "name": "easy-make",
    "parent": "default",
    "exclude": {
      "directories": ["tests/", "third_party/"]
    }
  },
  {
    "name": "debug",
    "parent": "easy-make",
    "optimization": "0",
    "defines": ["DEBUG"],
    "output": {
      "name": "easy-make-debug"
    }
  },
  {
    "name": "release",
    "parent": "easy-make",
    "optimization": "3",
    "defines": ["NDEBUG", "RELEASE"],
    "warnings": ["-Wall", "-Wextra", "-Werror"],
    "output": {
      "name": "easy-make"
    }
  }
]
